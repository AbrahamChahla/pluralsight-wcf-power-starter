<Window x:Class="SCP.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="272.786" Width="418.902">
    <Grid>
        <Button x:Name="btnStart" Content="Start Process" HorizontalAlignment="Left" Margin="66,53,0,0" 
                VerticalAlignment="Top" Width="75" Click="btnStart_Click"/>
        <Label x:Name="lblNumber" Content="" FontSize="26" HorizontalAlignment="Left" Margin="178,53,0,0" VerticalAlignment="Top" Width="168" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.477"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.375"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="263,120,0,0" 
                VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>

    </Grid>

</Window>
